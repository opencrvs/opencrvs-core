{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@webhooks/*": ["./*"]
    },
    "target": "es6",
    "module": "node16",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "build/dist",
    "sourceMap": true,
    "moduleResolution": "node16",
    "rootDir": ".",
    "lib": ["esnext.asynciterable", "es6", "es2019"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["fhir", "jest"]
  },
  "include": ["resources/**/*.ts", "src/**/*.ts", "typings"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests"]
}
