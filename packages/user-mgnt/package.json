{
  "name": "@opencrvs/user-mgnt",
  "version": "1.0.0-alpha.6",
  "description": "OpenCRVS user management service",
  "main": "src/index.js",
  "license": "NONE",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest  --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "precommit": "lint-staged",
    "populate": "ts-node -r tsconfig-paths/register resources/populate.ts",
    "test:compilation": "tsc --noEmit"
  },
  "dependencies": {
    "@types/boom": "^7.2.0",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/joi": "^14.0.0",
    "@types/mongoose": "^5.0.16",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "app-module-path": "^2.2.0",
    "boom": "^7.2.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "8.1.0",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.1.5",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/mockingoose": "^2.11.0",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "mockingoose": "^2.13.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.15.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@user-mgnt/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
