{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib/",
    "module": "ESNext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    ".storybook",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
