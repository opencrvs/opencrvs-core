{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@gateway/*": ["./*"],
      "@events/*": ["../../events/src/*"]
    },
    "target": "es6",
    "module": "node16",
    "outDir": "build/dist",
    "sourceMap": true,
    "moduleResolution": "node16",
    "rootDir": ".",
    "lib": ["esnext.asynciterable", "es6", "es2019", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "types": ["fhir", "jest"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "typings"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests"]
}
