{
  "name": "@opencrvs/performance",
  "version": "1.0.0-alpha.1.1",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.2.1",
    "@opencrvs/commons": "^1.0.0-alpha.1.1",
    "@opencrvs/components": "^1.0.0-alpha.1.1",
    "@sentry/browser": "^4.6.3",
    "@types/redux-sentry-middleware": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link-context": "^1.0.12",
    "apollo-link-http": "^1.5.9",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "formik": "^1.5.1",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.4.2",
    "graphql-tools": "^4.0.3",
    "localforage": "^1.7.2",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "logrocket": "^0.6.19",
    "react": "^16.10.1",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.10.1",
    "react-intl": "^3.1.13",
    "react-scripts": "^3.0.1",
    "redux-loop": "^5.0.0",
    "react-redux": "^5.0.7",
    "redux-sentry-middleware": "^0.0.15",
    "serve": "^10.0.2",
    "styled-components": "^3.3.3"
  },
  "scripts": {
    "postinstall": "patch-package",
    "precommit": "lint-staged",
    "start": "BROWSER=none PORT=3001 craco start",
    "build": "craco --max_old_space_size=8000 build",
    "docker:build": "docker build ../../ -f ../../Dockerfile-register -t ocrvs-register",
    "docker:run": "docker run -it --rm -p 5000:80 --name ocrvs-register ocrvs-register",
    "test": "PORT=3001 craco test --watchAll=false --coverage --silent --noStackTrace --env=jsdom --modulePaths=src/ && yarn test:compilation",
    "test:watch": "PORT=3001 craco test --env=jsdom --modulePaths=src/ --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'",
    "lint:ts": "eslint --fix './src/**/*.{ts,tsx}'",
    "start:prod": "yarn build && yarn serve -s -l 3001 build",
    "test:compilation": "tsc --noEmit",
    "build:clean": "rm -rf build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "yarn lint:ts",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/history": "^4.6.2",
    "@types/jest": "^24.0.13",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^10.12.5",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-redux": "^5.0.14",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-react-app": "^4.0.1",
    "history": "^4.7.2",
    "jest": "24.7.1",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.15.2",
    "react-router": "^4.2.0",
    "react-router-redux": "next",
    "redux": "^4.0.1",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
