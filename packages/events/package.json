{
  "name": "@opencrvs/events",
  "version": "1.8.0",
  "description": "OpenCRVS Events service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first  nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "yarn test:compilation && vitest run",
    "test:watch": "vitest",
    "lint": "eslint -c eslint.config.js --fix --max-warnings=0",
    "precommit": "lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc && tsc -p tsconfig.router.json",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8.16.2",
    "@opencrvs/commons": "^1.7.0",
    "@trpc/server": "^11.0.0-rc.804",
    "app-module-path": "^2.2.0",
    "date-fns": "^4.1.0",
    "envalid": "^8.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "6.9.0",
    "msw": "^2.7.3",
    "superjson": "1.9.0-0",
    "trpc-to-openapi": "^2.1.5",
    "tsconfig-paths": "^3.13.0",
    "zod": "^3.25.48",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.1",
    "@testcontainers/elasticsearch": "^10.15.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "cross-env": "^7.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "lint-staged": "^15.0.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.0.0",
    "prettier": "3.5.3",
    "testcontainers": "^10.15.0",
    "ts-jest": "27.1.4",
    "ts-node": "^6.1.1",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^2.1.5",
    "yaml": "^2.7.1"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "eslint -c eslint.config.js --fix"
    ]
  }
}
