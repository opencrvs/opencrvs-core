{
  "name": "@opencrvs/register",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@opencrvs/components": "^0.1.0",
    "@types/history": "^4.6.2",
    "@types/react-intl": "^2.3.8",
    "@types/react-redux": "^6.0.0",
    "@types/react-router-redux": "^5.0.14",
    "@types/xregexp": "^3.0.29",
    "apollo-boost": "^0.1.6",
    "email-validator": "^2.0.4",
    "formik": "^1.0.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.2",
    "history": "^4.7.2",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.10",
    "query-string": "^6.1.0",
    "react": "^16.3.2",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.3.2",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "next",
    "react-scripts-ts": "2.16.0",
    "redux": "^4.0.0",
    "redux-loop": "^4.3.3",
    "xregexp": "^4.2.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "BROWSER=none PORT=3000 react-scripts-ts start",
    "verify-build-config": "ts-node -O '{\"module\": \"commonjs\"}' src/config.ts",
    "build": "yarn verify-build-config && react-scripts-ts build && sw-precache --root='build/' --config sw-precache-config.js",
    "docker:build": "docker build ../../ -f ../../Dockerfile-register -t ocrvs-register",
    "docker:run": "docker run -it --rm -p 5000:5000 --name ocrvs-register ocrvs-register",
    "test": "PORT=3000 react-scripts-ts test --env=jsdom --modulePaths=src/ --coverage",
    "eject": "react-scripts-ts eject",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'",
    "start:prod": "yarn build && yarn serve -s -l 3000 build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "tslint",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^22.2.3",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^10.0.8",
    "@types/query-string": "^6.1.0",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "prettier": "^1.12.1",
    "serve": "^10.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "sw-precache": "^5.2.1",
    "ts-node": "^6.1.1",
    "typescript": "^3.0.1",
    "typescript-react-intl": "^0.2.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1"
    }
  }
}
