{
  "name": "@opencrvs/register",
  "version": "1.0.0-alpha.6",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.2.1",
    "@opencrvs/components": "^1.0.0-alpha.6",
    "@sentry/browser": "^4.6.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/history": "^4.6.2",
    "@types/react-intl": "^2.3.8",
    "@types/react-redux": "^6.0.0",
    "@types/react-router-redux": "^5.0.14",
    "@types/redux-sentry-middleware": "^0.0.1",
    "@types/xregexp": "^3.0.29",
    "apollo-boost": "^0.1.6",
    "apollo-client": "^2.4.5",
    "apollo-link-context": "^1.0.9",
    "bcryptjs": "^2.4.3",
    "email-validator": "^2.0.4",
    "formik": "^1.5.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "history": "^4.7.2",
    "jimp": "^0.6.1",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^7.1.0",
    "localforage": "^1.7.2",
    "lodash": "^4.17.10",
    "logrocket": "^0.6.19",
    "moment": "^2.22.2",
    "pdfmake": "^0.1.40",
    "query-string": "^6.1.0",
    "react": "^16.3.2",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.3.2",
    "react-idle-timer": "^4.2.5",
    "react-intl": "^2.4.0",
    "react-moment": "^0.8.4",
    "react-page-visibility": "^3.2.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "next",
    "react-scripts": "^3.0.1",
    "react-stickynode": "^2.0.1",
    "react-swipeable": "^4.3.0",
    "redux": "^4.0.1",
    "redux-loop": "^4.4.1",
    "redux-sentry-middleware": "^0.0.15",
    "styled-components": "^3.3.3",
    "xregexp": "^4.2.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "BROWSER=none PORT=3000 craco start",
    "build": "craco --max_old_space_size=4096 build && yarn gen:sw",
    "gen:sw": "workbox injectManifest --config workbox-config.js",
    "docker:build": "docker build ../../ -f ../../Dockerfile-register -t ocrvs-register",
    "docker:run": "docker run -it --rm -p 5000:5000 --name ocrvs-register ocrvs-register",
    "test": "PORT=3000 craco test --env=jsdom --modulePaths=src/ && yarn test:compilation",
    "test:watch": "PORT=3000 craco test --env=jsdom --modulePaths=src/ --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "eject": "craco eject",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'",
    "lint:ts": "eslint './src/**/*.{ts,tsx}'",
    "start:prod": "yarn build && yarn serve -s -l 3000 build",
    "test:compilation": "tsc --noEmit",
    "extract:translations": "ts-node -O '{\"module\": \"commonjs\"}' src/extract-translations.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "yarn lint:ts",
      "stylelint",
      "yarn extract:translations",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.13",
    "@types/jwt-decode": "^2.2.1",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.5",
    "@types/query-string": "^6.1.0",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-stickynode": "^1.4.0",
    "@types/redux-logger": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "apollo-cache-inmemory": "^1.3.9",
    "apollo-link": "^1.2.3",
    "chalk": "^2.4.1",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "json2csv": "^4.3.2",
    "nock": "^10.0.6",
    "opener": "^1.5.1",
    "prettier": "^1.15.2",
    "serve": "^10.0.2",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1",
    "typescript-react-intl": "^0.3.0",
    "workbox-cli": "^4.0.0-alpha.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "@register/(.*)": "<rootDir>/src/$1"
    }
  }
}
