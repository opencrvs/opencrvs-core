{
  "name": "@opencrvs/auth",
  "version": "1.0.0-alpha.2.0",
  "description": "OpenCRVS authentication service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "generate-test-token": "NODE_PATH=. ts-node resources/generate-test-token",
    "request-token": "NODE_PATH=. ts-node resources/request-token",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@types/hapi-pino": "^6.3.0",
    "@types/pino": "^5.14.0",
    "app-module-path": "^2.2.0",
    "@hapi/boom": "^7.2.0",
    "crypto": "^1.0.1",
    "dotenv": "^6.1.0",
    "@hapi/hapi": "^20.0.1",
    "hapi-pino": "^6.3.0",
    "hapi-sentry": "^3.1.0",
    "io-ts": "^1.2.1",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "lint-staged": "^7.1.0",
    "node-fetch": "^2.6.1",
    "pino": "^5.14.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/dotenv": "^6.1.0",
    "@types/fhir": "^0.0.30",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/node-fetch": "^2.1.2",
    "@types/redis": "^2.8.6",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.15.2",
    "redis-mock": "^0.27.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.2"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@auth/(.*)": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
