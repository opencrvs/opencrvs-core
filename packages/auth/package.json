{
  "name": "@opencrvs/auth",
  "version": "1.8.0",
  "description": "OpenCRVS authentication service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "yarn test:compilation && jest --coverage --silent --noStackTrace",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "lint": "eslint -c .eslintrc.js --fix ./src --max-warnings=0",
    "generate-test-token": "NODE_PATH=. ts-node resources/generate-test-token",
    "request-token": "NODE_PATH=. ts-node resources/request-token",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@opencrvs/commons": "^1.7.0",
    "app-module-path": "^2.2.0",
    "dotenv": "^6.1.0",
    "envalid": "^8.0.0",
    "fp-ts": "^2.12.3",
    "hapi-pino": "^9.0.0",
    "hapi-sentry": "^3.1.0",
    "io-ts": "^2.2.18",
    "joi": "^17.3.0",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^2.6.7",
    "pino": "^7.0.0",
    "redis": "^3.1.1",
    "tsconfig-paths": "^3.13.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/dotenv": "^6.1.0",
    "@types/fhir": "^0.0.30",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node-fetch": "^2.5.12",
    "@types/redis": "^2.8.6",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "command-line-args": "^6.0.0",
    "command-line-usage": "^5.0.5",
    "cross-env": "^7.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.7.0",
    "jest-fetch-mock": "^2.1.2",
    "nodemon": "^3.0.0",
    "prettier": "2.8.8",
    "redis-mock": "^0.56.0",
    "ts-jest": "29.2.5",
    "ts-node": "^6.1.1",
    "typescript": "5.6.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint -c .eslintrc.js --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@auth/(.*)": "<rootDir>/src/$1",
      "@opencrvs/commons/(.*)": "<rootDir>/../commons/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
