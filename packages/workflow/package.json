{
  "name": "@opencrvs/workflow",
  "version": "1.5.0",
  "description": "OpenCRVS workflow service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "lint": "eslint -c .eslintrc.js --fix ./src --max-warnings=0",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@opencrvs/commons": "^1.3.0",
    "app-module-path": "^2.2.0",
    "dotenv": "^6.1.0",
    "hapi-auth-jwt2": "10.6.0",
    "hapi-pino": "^9.0.0",
    "hapi-sentry": "^3.1.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "node-fetch": "^2.6.7",
    "pino": "^7.0.0",
    "short-uid": "^0.1.0",
    "tsconfig-paths": "^3.13.0",
    "uuid": "^3.3.2",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/fhir": "0.0.37",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^26.0.14",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.108",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "cross-env": "^7.0.0",
    "eslint": "^7.11.0",
    "jest": "27.5.1",
    "msw": "^1.3.2",
    "nodemon": "^3.0.0",
    "prettier": "2.8.8",
    "ts-jest": "27.1.4",
    "ts-node": "^10.0.0",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint -c .eslintrc.js --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setupTest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@workflow/(.*)": "<rootDir>/src/$1",
      "@test/(.*)": "<rootDir>/test/$1",
      "@opencrvs/commons/(.*)": "@opencrvs/commons/build/dist/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
