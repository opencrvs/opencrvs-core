{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "lib": [
      "esnext.asynciterable",
      "es2015",
      "es6",
      "es2019",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": [
      "jest",
      "fhir"
    ],
    "skipLibCheck": true,
    "declarationMap": true,
    "composite": true
  }
}
