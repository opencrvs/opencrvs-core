{
  "name": "@opencrvs/commons",
  "version": "1.8.1",
  "description": "OpenCRVS common modules and utils",
  "license": "MPL-2.0",
  "main": "./build/dist/common/index.js",
  "exports": {
    ".": "./build/dist/common/index.js",
    "./monitoring": "./build/dist/common/monitoring.js",
    "./types": "./build/dist/common/types.js",
    "./logger": "./build/dist/common/logger.js",
    "./authentication": "./build/dist/common/authentication.js",
    "./http": "./build/dist/common/http.js",
    "./fixtures": "./build/dist/common/fixtures.js",
    "./assignment": "./build/dist/common/assignment.js",
    "./client": "./build/dist/esm/client.js",
    "./events": "./build/dist/common/events/index.js",
    "./events/deduplication": "./build/dist/common/events/deduplication.js"
  },
  "scripts": {
    "start": "yarn build:watch",
    "test": "yarn test:compilation && jest",
    "test:watch": "jest --watch",
    "test:compilation": "wireit",
    "lint": "eslint -c eslint.config.js --fix --max-warnings=0",
    "postinstall": "yarn build",
    "build": "wireit",
    "build:watch": "yarn build --watch",
    "build:clean": "rm -rf build"
  },
  "wireit": {
    "build": {
      "command": "yarn tsc -b tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "tsconfig-esm.json",
        "tsconfig-commonjs.json",
        "tsconfig.build.json"
      ],
      "output": [
        "build/dist/common/**",
        "build/dist/tsconfig-commonjs.tsbuildinfo",
        "build/dist/esm/**",
        "build/dist/tsconfig-esm.tsbuildinfo"
      ]
    },
    "test:compilation": {
      "command": "yarn tsc -b --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.test.ts",
        "tsconfig-commonjs.json",
        "tsconfig.json"
      ],
      "output": [
        "build/dist/common/**",
        "build/dist/tsconfig-commonjs.tsbuildinfo",
        "build/dist/tests/**",
        "build/dist/tsconfig-tests.tsbuildinfo"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@types/fhir": "^0.0.37",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^26.0.14",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "4.17.0",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^9.0.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "concurrently": "^9.1.0",
    "date-fns": "^2.28.0",
    "elastic-apm-node": "^3.29.0",
    "jest": "29.7.0",
    "jwt-decode": "^3.0.0",
    "lodash": "^4.17.10",
    "node-fetch": "^2.6.7",
    "object-hash": "^3.0.0",
    "pino": "^7.0.0",
    "pkg-up": "^3.1.0",
    "typescript": "5.6.3",
    "uuid": "^9.0.0",
    "zod": "^3.23.8",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/object-hash": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jest-fetch-mock": "^2.1.2",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^11.0.0",
    "ts-jest": "29.2.5",
    "wireit": "^0.14.12"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig-tests.json",
          "isolatedModules": true
        }
      ]
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
