{
  "name": "@opencrvs/resources",
  "version": "1.0.0-alpha.1.1",
  "description": "OpenCRVS resources for reference data",
  "scripts": {
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test": "jest  --silent --noStackTrace --coverage && yarn test:compilation",
    "test:compilation": "tsc --noEmit",
    "start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "prep:employees:bgd": "ts-node -r tsconfig-paths/register src/bgd/features/employees/scripts/prepare-source-employees.ts",
    "save:testLocations": "ts-node -r tsconfig-paths/register src/tests/loadTestData.ts",
    "save:testEmployees": "ts-node -r tsconfig-paths/register src/tests/loadTestEmployees.ts",
    "save:testData": "yarn prep:employees:bgd && yarn save:testLocations && yarn save:testEmployees",
    "createReferenceData:bgd": "bash createReferenceDataBgd.sh",
    "createReferenceData:zmb": "bash createReferenceDataZmb.sh",
    "db:backup:create": "DEV=true ./backup-metadata.sh $1",
    "db:backup:restore": "DEV=true ./restore-metadata.sh $1",
    "db:clear:all": "DEV=true ./clear-all-data.sh $1"
  },
  "devDependencies": {
    "csv2json": "^1.4.2",
    "dotenv": "^6.1.0",
    "json2csv": "^4.3.0",
    "jsonwebtoken": "^8.3.0"
  },
  "dependencies": {
    "@opencrvs/commons": "^1.0.0-alpha.1.1",
    "@opencrvs/user-mgnt": "^1.0.0-alpha.1.1",
    "@types/chalk": "^2.2.0",
    "@types/code": "^4.0.3",
    "@types/csv2json": "^1.4.0",
    "@types/dotenv": "^6.1.0",
    "@types/fhir": "^0.0.30",
    "@types/geojson": "^7946.0.4",
    "@types/hapi": "^17.8.2",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/json2csv": "^4.2.0",
    "@types/lodash": "^4.14.117",
    "@types/mime-types": "^2.1.0",
    "@types/mongoose": "^5.0.16",
    "@types/node": "^10.12.5",
    "@types/node-fetch": "^2.3.4",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "app-module-path": "^2.2.0",
    "boom": "^7.3.0",
    "chalk": "^2.4.1",
    "country-data": "^0.0.31",
    "crypto": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.8.1",
    "hapi-auth-jwt2": "8.1.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "joi": "^14.3.1",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.11",
    "mime-types": "^2.1.24",
    "mongoose": "^5.1.5",
    "node-fetch": "^2.6.0",
    "node-verhoeff": "^0.0.11",
    "nodemon": "^1.18.5",
    "nyc": "^13.1.0",
    "opener": "^1.5.1",
    "prettier": "^1.15.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.0.1",
    "typestyle": "^1.3.7",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@resources/(.*)": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
