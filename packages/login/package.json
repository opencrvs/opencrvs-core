{
  "name": "@opencrvs/login",
  "version": "1.0.0-alpha.3.0",
  "description": "OpenCRVS login client application",
  "license": "MPL-2.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.2.1",
    "@opencrvs/components": "^1.0.0-alpha.3.0",
    "@sentry/browser": "^4.6.3",
    "@types/history": "^4.6.2",
    "@types/react-redux": "^7.1.5",
    "@types/redux-sentry-middleware": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "axios": "^0.21.1",
    "country-data": "^0.0.31",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "focus-visible": "^5.0.2",
    "history": "^4.7.2",
    "lint-staged": "^7.1.0",
    "lodash": "^4.17.10",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "logrocket": "^0.6.19",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-intl": "5.19.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "@types/react-router": "^5.1.2",
    "connected-react-router": "^6.5.2",
    "react-scripts": "3.0.1",
    "redux": "^4.0.4",
    "redux-form": "^8.2.3",
    "redux-loop": "^5.0.0",
    "redux-sentry-middleware": "^0.0.15",
    "styled-components": "^5.2.0",
    "@types/styled-components": "^5.1.3"
  },
  "scripts": {
    "postinstall": "patch-package",
    "precommit": "lint-staged",
    "start": "BROWSER=none PORT=3020 craco start",
    "build": "craco --max_old_space_size=8000 build && yarn gen:sw",
    "gen:sw": "workbox generateSW --config workbox-config.js",
    "docker:build": "docker build ../../ -f ../../Dockerfile-login -t ocrvs-login",
    "docker:run": "docker run -it --rm -p 5000:80 --name ocrvs-login ocrvs-login",
    "test": "PORT=3020 craco test --watchAll=false --coverage --silent --noStackTrace --env=jsdom --modulePaths=src/ && yarn test:compilation",
    "test:watch": "PORT=3020 craco test --env=jsdom --modulePaths=src/ --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "lint:css": "stylelint 'src/**/*.{ts,tsx}'",
    "lint:ts": "eslint --fix './src/**/*.{ts,tsx}'",
    "start:prod": "yarn build && yarn serve -s -l 3020 build",
    "test:compilation": "tsc --noEmit",
    "build:clean": "rm -rf build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "yarn lint:ts",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.13",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^10.12.5",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "@types/redux-form": "^8.2.0",
    "@types/redux-mock-store": "^1.0.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-react-app": "^4.0.1",
    "jest": "^24.8.0",
    "jwt-decode": "^2.2.0",
    "moxios": "^0.4.0",
    "opener": "^1.5.1",
    "prettier": "^1.15.2",
    "redux-mock-store": "^1.5.3",
    "serve": "^10.0.2",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "typescript": "^3.7.2",
    "workbox-cli": "^4.0.0-alpha.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
