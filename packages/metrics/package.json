{
  "name": "@opencrvs/metrics",
  "version": "1.8.0",
  "description": "OpenCRVS metrics service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "pnpm test:compilation && jest --coverage --silent --noStackTrace",
    "test:watch": "jest --watch",
    "open:cov": "pnpm test && opener coverage/index.html",
    "lint": "eslint -c eslint.config.js --fix --max-warnings=0",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@opencrvs/commons": "^1.7.0",
    "app-module-path": "^2.2.0",
    "archiver": "^3.1.1",
    "csv-stringify": "^5.3.4",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.28.0",
    "envalid": "^8.0.0",
    "fast-csv": "^4.3.6",
    "hapi-auth-jwt2": "10.6.0",
    "hapi-pino": "^9.0.0",
    "hapi-sentry": "^3.1.0",
    "influx": "^5.9.3",
    "joi": "^17.3.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.17.1",
    "mongoose": "^6.11.3",
    "node-fetch": "^2.6.7",
    "pino": "^7.0.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "@types/archiver": "^3.0.0",
    "@types/fhir": "^0.0.30",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.108",
    "@types/node": "22.15.29",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "cross-env": "^7.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jest": "29.7.0",
    "jest-fetch-mock": "^2.1.2",
    "mockingoose": "^2.15.2",
    "nodemon": "^3.0.0",
    "prettier": "3.5.3",
    "ts-jest": "29.2.5",
    "ts-node": "^6.1.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint -c .eslintrc.js --fix"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setupJest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@metrics/(.*)": "<rootDir>/src/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
