{
  "ignore": [
    "**/*.@(editorconfig|md|log|lock|patch|prettierrc|gitignore|eslintignore|stylelintrc|csv|gz|geojson|woff2|woff|xml|yarnrc|yarn-integrity|ttf|map|pdf|snap|dockerignore|jsonc|idea|env|info|key|pub|cjs)",
    ".git",
    ".idea/opencrvs-core.iml",
    "**/patches",
    ".secrets",
    "deploy_key.enc",
    ".vscode",
    ".history",
    "data",
    "backups",
    "**/coverage",
    "packages/client/public/robots.txt",
    "packages/login/public/robots.txt",
    "infrastructure/monitoring/kibana/config.ndjson",
    "infrastructure/monitoring/logstash/*.conf",
    ".env*",
    ".vs",
    "**/.DS_Store",
    "AUTHORS",
    "LICENSE",
    "infrastructure/license-header.txt",
    "**/*Dockerfile",
    "**/packages/components/lib",
    "**/packages/*/build",
    "packages/gateway/src/graphql/schema.d.ts",
    "packages/gateway/src/graphql/schema.graphql",
    "infrastructure/configure-file-monitoring.sh",
    "packages/client/index.html",
    "packages/login/index.html",
    "packages/components/**/*.mdx",
    "packages/components/.storybook/preview.jsx",
    "grafana",
    "packages/scheduler/start.sh",
    "packages/scheduler/cronTabFiles/*",
    "packages/scheduler/jobs/*",
    ".nvmrc",
    ".idea"
  ],
  "license": "infrastructure/license-header.txt",
  "licenseFormats": {
    "sh|yml|yaml|toml|conf|txt|dotfile|graphql": {
      "eachLine": {
        "prepend": "# "
      }
    },
    "html|xml|svg|mdx": {
      "prepend": "<!--",
      "append": "-->"
    },
    "ts|tsx|js|css": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "ini": {
      "eachLine": {
        "prepend": "; "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
